<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <ProjectRoot>$(SolutionDir)..\</ProjectRoot>
    <ExtRoot>$(ProjectRoot)ext\</ExtRoot>
    <LibRoot>$(ProjectRoot)lib\</LibRoot>
    <PublicDir>include\</PublicDir>
  </PropertyGroup>
  <PropertyGroup />
  <ItemDefinitionGroup>
    <ClCompile>
      <WarningLevel>Level4</WarningLevel>
      <LanguageStandard>stdcpplatest</LanguageStandard>
      <TreatWarningAsError />
      <DiagnosticsFormat>Caret</DiagnosticsFormat>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="ProjectRoot">
      <Value>$(ProjectRoot)</Value>
    </BuildMacro>
    <BuildMacro Include="ExtRoot">
      <Value>$(ExtRoot)</Value>
    </BuildMacro>
    <BuildMacro Include="LibRoot">
      <Value>$(LibRoot)</Value>
    </BuildMacro>
    <BuildMacro Include="PublicDir">
      <Value>$(PublicDir)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>